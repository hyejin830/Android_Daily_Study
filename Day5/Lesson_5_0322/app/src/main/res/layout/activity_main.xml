<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="3.22 Friday Lesson"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <Button
            android:id="@+id/btn_widget"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="위젯"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_time_resevation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시간 예약"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_auto_textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="자동완성(멀티)텍스트뷰"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="바 연습"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_rating_movie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="영화 평점"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_scrollview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="스크롤뷰"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_sliding_drawer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="슬라이딩 드로어"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>