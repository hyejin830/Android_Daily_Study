<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="3.26 Tuesday Lesson"
        android:textSize="30dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="30dp">

        <Button
            android:id="@+id/btn_menu_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Menu example"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_context_menu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Context Menu Example"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_context_menu_practice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Context Menu Practice"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_dialog_example"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dialog Example"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_action_bar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="action bar example"
            android:textSize="20dp" />

        <Button
            android:id="@+id/btn_web_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="web view example"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>